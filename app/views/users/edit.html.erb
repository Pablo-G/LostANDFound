<% content_for :title do %>
  <%= @user.name %>
<% end %>


<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-1">

        <%= render 'shared/errors', object: @user %>
        
        <h2>Editar perfil</h2>

        <%= form_for @user, url: user_path, method: :patch do |f| %>

          <h6>Nombre</h6>
          <%= f.text_field :name, :placeholder => @user.name,
          class: "form-control"  %>

          <h6>Correo electrónico</h6>
          <p><%= @user.email %></p>

          <h6>Género</h6>
          <%= f.text_field :gender, :placeholder => @user.gender,
          class: "form-control"  %>

          <h6>Edad</h6>
          <%= f.number_field :age, :min => 0, :max => 99, :step => 1,
          :placeholder => @user.age, class: "form-control" %>
          

          <%= content_tag :button, :type => :submit,
          :class => ["btn", "btn-default"] do%>
            Editar perfil
          <% end %>
          
        <% end %>

        <h2>Cambiar contraseña</h2>

        <%= form_for @user, url: update_password_path, method: :patch do |f| %>

          <h6>Contraseña actual</h6>
          <%= f.password_field :current_password,
          :placeholder => "Contraseña actual",
          class: "form-control" %>

          <h6>Nueva contraseña</h6>
          <%= f.password_field :password,
          :placeholder => "Nueva contraseña",
          class: "form-control"  %>
          
          <h6>Confirma tu nueva contraseña</h6>
          <%= f.password_field :password_confirmation,
          :placeholder => "Confirma tu nueva contraseña",
          class: "form-control"  %>

          
          <%= content_tag :button, :type => :submit,
          :class => ["btn", "btn-default"] do%>
            Cambiar contraseña
          <% end %>
          
        <% end %>
      </div>
    </div>
  </div>
</section>

