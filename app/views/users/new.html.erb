<% content_for :title do %>
  Registro
<% end %>

<h1>Registro</h1>

<%= form_for @user do |f| %>

  <%# shared/errors muestra los errores encontrados en un
  # objeto dado, en este caso @user %>
  <%= render 'shared/errors', object: @user %>
  
  <%= f.label :name, "Nombre" %>
  <%= f.text_field :name %>
  </br>
  
  <%= f.label :email, "Correo electrónico" %>
  <%= f.email_field :email %>
  </br>

  <%= f.label :gender, "Género" %>
  <%= f.text_field :gender %>
  </br>

  <%= f.label :age, "Edad" %>
  <%= f.number_field :age, :min => 0, :step => 1 %>
  </br>
  
  <%= f.label :password, "Contraseña" %>
  <%= f.password_field :password %>
  </br>
  
  <%= f.label :password_confirmation, "Confirma tu contraseña" %>
  <%= f.password_field :password_confirmation %>
  </br>

  <%= f.submit "Registrarse" %>
  
<% end %>
