<section id="form"><!--form-->
    <div class="container">
      <div class="">
        <div class="col-sm-4 col-sm-offset-1">
          <div class="new-product-form"><!--login form-->
            <h2>Submit a new object</h2>
            <%= form_for @lost_object do |f| %>
            <!--form action="#" -->
               <%= render 'shared/errors', object: @lost_object %>
  
              <%= f.label :name, "Object name"%></br>
              <%= f.text_field :name, :placeholder => "Object name" %>
              </br>

              <%= f.label :location_id, "Location found" %>
              <%= f.select :location_id, options_for_select(Location.all.map { |l| [l.name, l.id] }) %>
              </br>
              
              <%= f.label :description, "Object description" %>
              <%= f.text_area :description %>
              </br>
              
              <%= f.label :image, "Image" %>
              <%= f.file_field :image %>
              </br>
            
              <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
                Submit
              <% end %>
            <% end %>
