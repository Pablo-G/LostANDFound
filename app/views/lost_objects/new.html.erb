<% content_for :title do %>
  Nuevo objeto
<% end %>

<h1>Alta de objetos perdidos</h1>

<%= form_for @lost_object do |f| %>

  <%# shared/errors muestra los errores encontrados en un
  # objeto dado, en este caso @lost_object %>
  <%= render 'shared/errors', object: @lost_object %>
  
  <%= f.label :name, "Nombre" %>
  <%= f.text_field :name %>
  </br>
  
  <%= f.label :category, "Tipo" %>
  <%= f.text_field :category %>
  </br>

  <%= f.label :location_id, "Ubicación" %>
  <%= f.select :location_id,
      options_for_select(Location.all.map { |l| [l.name, l.id] }) %>
  </br>

  <%= f.label :description, "Breve descripción" %>
  <%= f.text_area :description %>
  </br>

  <%= f.label :image, "Imagen" %>
  <%= f.file_field :image %>
  </br>

  <%= f.label :actable_type, "Tipo" %>
  <%= f.select :actable_type,
  options_for_select(LostObject.types, :other) %>
  </br>

  <h3>Campos específicos por tipo. Deben ocultarse según 'Tipo' usando JavaScript</h3>

  <p>phone</p>
  <%= f.label :brand, "Marca" %>
  <%= f.text_field :brand %>
  </br>
  
  <%= f.label :model, "Modelo" %>
  <%= f.text_field :model %>
  </br>
  
  <%= f.label :company, "Compañía telefónica" %>
  <%= f.text_field :company %>
  </br>

  <%= f.label :case, "¿Tiene funda?" %>
  <%= f.check_box :case %>
  </br>

  <%= f.label :cracked_screen, "¿Tiene la pantalla rota?" %>
  <%= f.check_box :cracked_screen %>
  </br>
  
  
  <%= f.submit "Dar de alta" %>
  
<% end %>
