<% content_for :title do %>
  Recuperación de Contraseña
<% end %>

<section id="form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1">
		<p>Introduce tu correo y se te enviarán instrucciones para recuperar tu contraseña</p>

		<%= form_tag password_resets_path, :method => "post" do %>
		  <%= email_field_tag :email, "", placeholder: "Correo Electrónico" %>

		  <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
		    Enviar
		  <% end %>
		<% end %>
      </div>
    </div>
  </div>
</section>