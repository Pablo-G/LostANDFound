<% content_for :title do %>
  Nueva Contraseña
<% end %>

<section id="form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1">
		<%= form_for @user, :url => password_reset_path(@user.perishable_token), :method => "patch" do %>
		  
		  <%= render 'shared/errors', object: @user %>
		  
		  <%= password_field_tag :password, "", placeholder: "Contraseña" %>
		  <%= password_field_tag :password_confirmation, "", placeholder: "Confirma tu Contraseña" %>

		  <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
		    Enviar
		  <% end %>
		<% end %>
      </div>
    </div>
  </div>
</section>