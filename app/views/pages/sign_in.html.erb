<% content_for :title do %>
  Login
<% end %>

<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-1">
        <div class="login-form"><!--login form-->
          <h2>Login to your account</h2>
          <%= form_for (user_session ||= UserSession.new), :url => :sign_in do |f| %>
            <%# shared/errors muestra los errores encontrados en un
              # objeto dado, en este caso user_session %>
            <%= render 'shared/errors', object: user_session %>
            <!--<%= f.label :email, "Correo Electrónico" %>-->
            <%= f.email_field :email, :placeholder => "Email address" %>
            </br>
            <!--<%= f.label :password, "Contraseña" %>-->
            <%= f.password_field :password, :placeholder => "Password" %>
            </br>  

            <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
              Login
            <% end %>
          <% end %>
        </div><!--/login form-->
      </div>
      <div class="col-sm-1">
        <h2 class="or">OR</h2>
      </div>
      <div class="col-sm-4">
        <div class="signup-form"><!--sign up form-->
          <h2>New User Signup!</h2>

          <%= form_for (user ||= User.new), :url => :register do |f| %>
            <%# shared/errors muestra los errores encontrados en un
            # objeto dado, en este caso user %>
            <%= render 'shared/errors', object: user %>
            
            <%= f.text_field :name, :placeholder => "Name" %>
            
            <%= f.email_field :email, :placeholder => "Email Address" %>

            <%= f.password_field :password, :placeholder => "Password" %>
            
            <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation"  %>

            <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
              Signup
            <% end %>
          <% end %>

          
        </div><!--/sign up form-->
      </div>
    </div>
  </div>
</section><!--/form-->
