<% content_for :title do %>
  Ticket #<%= @ticket.IDPrettyFormat %>
<% end %>

<section id="form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1">
      	<h1 style="text-align: center">Tickets</h1>
        <div class="ticket_mess">
        	<div style="width: 45%">
        		<% @user.lost_objects.each do |lo| %>
              <%= render lo.tickets %>
            <% end %>

            <% if @user.tickets %>
              <%= render @user.tickets %>
            <% end %>
        	</div>
        	<div style="width: 55%">
                <% if @ticket.replies %>
                  <%= render @ticket.replies %>
                <% end %>
                <% if @ticket.status %>
                  Responder:
                  <%= form_for @reply do |f| %>
                    <input name="ticket_id" type="hidden" value=<%= @ticket.id %> />
                    <%= f.text_area :message, class: "form-control", rows: "3" %>
                    <%= content_tag :button, :type => :submit, :class => ["btn", "btn-default"] do%>
                    Enviar
                    <% end %>  
                    <%= link_to 'Cerrar Ticket', @ticket, method: :put, :class => ["btn", "btn-default"] %>
                  <% end %> 
                <% end %> 
        	</div>
        </div>
      </div>
    </div>
  </div>
</section>